<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">



</head>

<body>
    <center>
      <div>
         <h1> EJS </h1>
      
             <h3 >Lista de productos</h3>

                
                  <% productos.forEach((product)=> { %>
                      <div className='col-md-4' >

                           <div className="card w-125 mt-5 border-success" >
                              <div className="card-header mt-5">
                                 <%= product.title %>
                                </div>

                               <div className="card-body mt-3">
                                 
                                 <img src= <%=product.thumbnail %> alt='img' className='w-80' />                                                         
                                  </div>
                               <div className="card-footer mt-3 mb-5">      
                                    $ <%=  product.price %>
                                  </div>  
                           </div>
                      </div>
                    
                      <% } ) %>
        

             <a href="/"><button class=" btn btn-outline-primary mt 5 mb-5">Volver al formulario de carga</button></a>

   </div> 
</center>

</body>

</html>